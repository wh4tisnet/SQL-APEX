<Window x:Class="apexlegends.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="tabCont" Margin="0,0,0,110">
            <TabItem Header="Characters">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="426*"/>
                        <ColumnDefinition Width="19*"/>
                        <ColumnDefinition Width="349*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="DBLiteCharacters" AutoGenerateColumns="False" IsReadOnly="False" SelectionChanged="DBLiteCharacters_SelectionChanged" Margin="0,0,258,0" Grid.ColumnSpan="3">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Character Name" Binding="{Binding name}" />
                            <DataGridTextColumn Header="Character Description" Binding="{Binding description}" />
                            <DataGridTextColumn Header="Is image uploaded?" Binding="{Binding IsImageUploaded}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Image Name="imgCharacter" Margin="102,28,7,59" Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Abilities">
                <DataGrid x:Name="DBLiteAbilities" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="True" IsReadOnly="False"/>
            </TabItem>
            <TabItem Header="Roles">
                <DataGrid x:Name="DBLiteRoles" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="True" IsReadOnly="False"/>
            </TabItem>
            <TabItem Header="Team">
                <DataGrid x:Name="DBLiteTeam" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="True" IsReadOnly="False" InitializingNewItem="DBLiteTeam_InitializingNewItem"/>
            </TabItem>
            <TabItem Header="CharactersAbilities">
                <DataGrid x:Name="DBLiteCharactersAbilities" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="True" IsReadOnly="False" InitializingNewItem="DBLiteCharactersAbilities_InitializingNewItem"/>
            </TabItem>
            <TabItem Header="TeamCharacters">
                <Grid>
                    <DataGrid x:Name="DBLiteTeamCharacters" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="True" IsReadOnly="False" InitializingNewItem="DBLiteTeamCharacters_InitializingNewItem"/>
                </Grid>
            </TabItem>
            <TabItem Header="TeamRoster">
                <Grid>
                    <DataGrid x:Name="DBLiteTeamRoster" AutoGenerateColumns="False" IsReadOnly="True" InitializingNewItem="DBLiteTeamRoster_InitializingNewItem" Height="187" Margin="10,46,0,0" HorizontalAlignment="Left" Width="697" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Character Name" Binding="{Binding CharacterName}"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding rolename}"/>
                            <DataGridTextColumn Header="Character ID" Binding="{Binding CharacterId}"/>
                            <DataGridTextColumn Header="Role ID" Binding="{Binding IdRole}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <ComboBox x:Name="ComboBoxTeam" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Width="273" Height="26" SelectionChanged="ComboBoxTeam_SelectionChanged"/>
                    <Label x:Name="LabelTeamInfo" Content="Select Team: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>

        <Button Content="Select Image" Click="SelectImageButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="120" Height="30" Margin="65,0,0,39"/>
        <Button Content="Update" Click="UpdateButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="645,0,0,39"/>
    </Grid>
</Window>
